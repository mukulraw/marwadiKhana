<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrtechs.apps.mk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".bean"
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GetStarted" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Cart" />
        <activity android:name=".Order" />
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity android:name=".Rate" />
        <activity android:name=".Wishli" />
        <activity
            android:name=".WebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" />

        <receiver android:name=".SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status" />
        <activity android:name=".OTP" />
        <activity android:name=".CreateOrder" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditProfile" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".CODClass" />
        <activity android:name=".CodStatus" />
        <activity android:name=".Refer" />
        <activity android:name=".Track" />
        <activity android:name=".Middle"></activity>
    </application>

</manifest>